{
  "name": "gambit-server",
  "private": true,
  "version": "0.0.0",
  "types": "GambitServer.ts",
  "main": "GambitServer.ts",
  "scripts": {
    "start": "node ./build/GambitServer.js",
    "start:watch": "nodemon ./build/GambitServer.js",
    "build": "esbuild ./GambitServer.ts --bundle --platform=node --outfile=build/GambitServer.js",
    "build:watch": "yarn build --watch",
    "dev": "concurrently \"yarn start:watch\" \"yarn build:watch\"",
    "typecheck": "tsc",
    "lint": "eslint .",
    "lint:fix": "yarn lint:fix"
  },
  "dependencies": {
    "@zerve/core": "*",
    "@zerve/node": "*",
    "@zerve/data": "*"
  },
  "devDependencies": {
    "concurrently": "^7.2.0",
    "esbuild": "^0.14.39",
    "nodemon": "^2.0.16",
    "typescript": "^4.6.4"
  }
}
