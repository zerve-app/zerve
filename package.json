{
  "name": "@zerve/monorepo",
  "version": "0.0.0",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*",
      "docs"
    ],
    "nohoist": []
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "cross-env Z_ORIGIN=\"http://localhost:9888\" concurrently \"yarn workspace bear-server dev\" \"yarn workspace zoo-web dev --port 9000\"",
    "dev:yak": "yarn workspace yak dev",
    "dev:zebra": "concurrently \"yarn workspace zebra-server dev\" \"yarn workspace zebra-web dev\"",
    "dev:aardvark": "cross-env Z_ORIGIN=\"http://localhost:3988\" concurrently \"yarn workspace aardvark-server dev\" \"yarn workspace zoo-web dev\"",
    "dev:server": "concurrently \"yarn workspace bear-server dev\"",
    "dev:web": "concurrently \"yarn workspace zoo-web dev\"",
    "dev:mobile": "watchman watch-del-all && yarn workspace zoo-mobile start",
    "dev:android": "yarn workspace zoo-mobile expo run:android",
    "dev:ios": "yarn workspace zoo-mobile expo run:ios",
    "dev:ios:xcode": "yarn workspace zoo-mobile prebuild && open apps/zoo-mobile/ios/Zerve.xcworkspace",
    "dev:sync": "yarn workspace @zerve/cli build && yarn workspace demo-web sync && yarn workspace demo-mobile sync",
    "zerve-sync": "yarn workspace @zerve/cli build && yarn workspace demo-web sync && yarn workspace demo-mobile sync",
    "build:mobile": "yarn workspace zoo-mobile rebuild",
    "build:ios": "yarn workspace zoo-mobile eas build --platform=ios --profile=production",
    "build:ios:internal": "yarn workspace zoo-mobile eas build --platform=ios --profile=internal",
    "build:ios:simulator": "yarn workspace zoo-mobile eas build --platform=ios --profile=simulator",
    "build:android:internal": "yarn workspace zoo-mobile eas build --platform=android --profile=internal",
    "build:android:dev": "yarn workspace zoo-mobile eas build --platform=android --profile=development",
    "build:android": "yarn workspace zoo-mobile eas build --platform=android --profile=production",
    "build:docs": "yarn workspace @zerve/docs build",
    "build:yak": "yarn workspace yak build",
    "lint": "turbo run lint",
    "clean": "yarn workspaces run clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "start:yak": "serve apps/yak/out",
    "aardvark:update": "ssh aardvark /root/aardvark-script.sh UpdateAardvark",
    "aardvark:build": "yarn workspace aardvark-server build && yarn workspace zoo-web build",
    "aardvark:start": "cross-env Z_ORIGIN=\"http://localhost:3988\" concurrently \"yarn workspace aardvark-server start\" \"yarn workspace zoo-web start\"",
    "aardvark:logs": "ssh aardvark -t \"journalctl -u AardvarkServer -n 150 --follow\"",
    "aardvark:reset": "ssh aardvark -t \"systemctl restart AardvarkServer\"",
    "zebra:reset": "ssh zebra -t \"systemctl restart ZebraServer\"",
    "docs": "yarn workspace @zerve/docs start",
    "pkg:publish": "node ./scripts/publish.js",
    "pkg:pack": "node ./scripts/pack.js"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "expo-modules-core": "0.11.4",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "turbo": "latest",
    "serve": "^14.0.1"
  },
  "turbo": {
    "pipeline": {
      "build": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          "dist/**",
          ".next/**"
        ]
      },
      "lint": {
        "outputs": []
      },
      "dev": {
        "cache": false
      }
    }
  },
  "importSort": {
    ".js, .jsx, .ts, .tsx": {
      "style": "module",
      "parser": "typescript"
    }
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=16.14.0 <19.0.0"
  },
  "resolutions": {
    "@types/react": "17.0.21",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-refresh": "^0.14.0",
    "react-native-web": "0.18.6"
  },
  "dependencies": {}
}
